<?xml version="1.0" encoding="ASCII"?>
<project>

  <property name="version"
            value="4.0"/>

  <property name="jar"
            value="build/lp-book-webchars-${version}.jar"/>

  <path id="classpath">
    <pathelement location="${jar}"/>
  </path>

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="jar">
    <mkdir dir="build/classes"/>
    <javac debug="yes"
           debuglevel="source,lines,vars"
           destdir="build/classes"
           includeantruntime="false">
<!--      <compilerarg value="-Xlint:all"/> -->
      <classpath refid="classpath"/>
      <src path="src/"/>
    </javac>
    <jar destfile="${jar}">
      <fileset dir="build/classes"
               includes="**/*.class"/>
    </jar>
  </target>

  <target name="http-headers" depends="jar"
   description="show HTTP response headers">
    <java classname="com.lingpipe.book.webchars.EchoHttpHeader"
        fork="true">
      <classpath refid="classpath"/>
      <arg value ="${url}"/>
    </java>
  </target>

  <target name="http-body" depends="jar"
   description="show HTTP response body">
    <java classname="com.lingpipe.book.webchars.EchoHttpBody"
        fork="true">
      <classpath refid="classpath"/>
      <arg value ="${url}"/>
    </java>
  </target>

  <target name="trace-sax" depends="jar"
   description="show HTTP response body">
    <java classname="com.lingpipe.book.webchars.TraceSaxEvents"
        fork="true">
      <classpath refid="classpath"/>
      <arg value ="${url}"/>
    </java>
  </target>

  <target name="xml-chars" depends="jar"
   description="show HTTP response body">
    <java classname="com.lingpipe.book.webchars.GetXmlCharacters"
        fork="true">
      <classpath refid="classpath"/>
      <arg value ="${url}"/>
    </java>
  </target>

</project>




