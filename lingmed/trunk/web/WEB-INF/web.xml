<web-app>
     <servlet>
         <servlet-name>SearchServlet</servlet-name>
         <servlet-class>com.aliasi.lingmed.genelinkage.SearchServlet</servlet-class>
	 <init-param>
	      <param-name>medlineHost</param-name>
	      <param-value>localhost</param-value>
	 </init-param>
	 <init-param>
	      <param-name>medlineService</param-name>
	      <param-value>/data/lucene/medline2009</param-value>
	 </init-param>
	 <init-param>
	      <param-name>entrezgeneHost</param-name>
	      <param-value>localhost</param-value>
	 </init-param>
	 <init-param>
	      <param-name>entrezgeneService</param-name>
	      <param-value>/data/lucene/allEntrezGene</param-value>
	 </init-param>
     </servlet>

     <servlet-mapping>
       <servlet-name>SearchServlet</servlet-name>
       <url-pattern>/search/*</url-pattern>
     </servlet-mapping>      

  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/GeneLinkDB</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
