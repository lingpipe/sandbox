// tutorials/interestingPhrases


  <target name="words"
          depends="jar">
    <java classname="GigawordWords"
          maxmemory="10G"
          fork="true">
      <classpath refid="classpath.standard"/>
      <arg value="${gigaword3.en.dir}"/>
    </java>
  </target>


  <target name="freq"
          depends="jar">
    <java classname="GigawordNGrams"
          maxmemory="10G"
          fork="true">
      <classpath refid="classpath.standard"/>
      <arg value="2"/>
      <arg value="1000000"/>
      <arg value="E:\data\gigawordEnglish\dist\nyt"/>
    </java>
  </target>

  <property name="gigaword.dir"
            value="E:\data\EnglishGigaword\dist\"/>

  <target name="roll"
          depends="jar">
    <java classname="RollingPhrases"
          maxmemory="1400M"
          fork="true">
      <jvmarg value="-server"/>
      <classpath refid="classpath.standard"/>
      <arg value="-dataDir=${gigaword.dir}/nyt"/>

      <arg value="-bgNGramOrder=3"/>
      <arg value="-bgCharNGramOrder=3"/>
      <arg value="-bgInterpolation=4.0"/>
      <arg value="-bgSamplePeriod=10"/>
      <arg value="-bgScaleThreshold=1000000"/>

      <arg value="-fgNGramOrder=5"/>
      <arg value="-fgSamplePeriod=1"/>
      <arg value="-fgScaleThreshold=1000000"/>

      <arg value="-reportMaxTerms=100"/>
      <arg value="-reportMinTermCount=5"/>
      <arg value="-reportMinNGram=1"/>
      <arg value="-reportMaxNGram=5"/>
    </java>
  </target>


