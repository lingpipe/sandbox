<?xml version="1.0" encoding="ASCII"?>
<project>

  <property name="version"
            value="4.0"/>

  <property name="jar"
            value="build/lp-book-tok-${version}.jar"/>

  <path id="classpath">
    <pathelement location="${jar}"/>
    <pathelement location="../../lib/lingpipe-4.0.1.jar"/>
  </path>
            

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="jar">
    <mkdir dir="build/classes"/>
    <javac debug="yes"
           debuglevel="source,lines,vars"
           destdir="build/classes"
           includeantruntime="false">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="classpath"/>
      <src path="src/"/>
    </javac>
    <jar destfile="${jar}">
      <fileset dir="build/classes"
               includes="**/*.class"/>
    </jar>
  </target>

  <target name="symbol-table-demo"
          depends="jar">
    <java classname="com.lingpipe.book.symbol.SymbolTableDemo"
          classpathref="classpath"
          fork="true">
    </java>
  </target>

  <target name="remove-symbol-demo"
          depends="jar">
    <java classname="com.lingpipe.book.symbol.RemoveSymbolsDemo"
          classpathref="classpath"
          fork="true">
    </java>
  </target>

  <target name="symbol-table-views-demo"
          depends="jar">
    <java classname="com.lingpipe.book.symbol.SymbolTableViewsDemo"
          classpathref="classpath"
          fork="true">
    </java>
  </target>

  <target name="symbol-table-compiler-demo"
          depends="jar">
    <java classname="com.lingpipe.book.symbol.SymbolTableCompilerDemo"
          classpathref="classpath"
          fork="true">
    </java>
  </target>

  <target name="run"
          depends="symbol-table-demo,
		   remove-symbol-demo,
		   symbol-table-views-demo,
                   symbol-table-compiler-demo"/>

</project>