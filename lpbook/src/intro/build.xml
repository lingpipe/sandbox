<?xml version="1.0"?>

<project name="LingPipe Book: Intro"
         basedir=".">

  <property name="version"
            value="4.0"/>

  <property name="jar"
            value="build/lp-book-intro-${version}.jar"/>

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="jar">
    <mkdir dir="build/classes"/>
    <javac optimize="on"
           debug="yes"
           debuglevel="source,lines,vars"
           destdir="build/classes">
      <src path="src/"/>
    </javac>
    <jar destfile="${jar}">
      <fileset dir="build/classes"
               includes="**/*.class"/>
    </jar>
  </target>

  <target name="hello"
          depends="jar">
    <java classname="com.lingpipe.book.intro.HelloWorld"
          classpath="${jar}"
          fork="true">
    </java>
  </target>

</project>