// tutorials/crf



<property name="muc6.data.munged"
          value="E:\data\muc6\munged"/>

<target name="muc6-corpus"
        depends="jar">
  <java classname="Muc6XvalCorpus"
        fork="true">
    <classpath refid="classpath.standard"/>
    <arg value="${muc6.data.munged}"/>
    <arg value="John Smith lives in New York."/>
  </java>
</target>

<property name="muc6.xv.minFeatureCount"
          value="1"/>
<property name="muc6.xv.addIntercept"
          value="true"/>
<property name="muc6.xv.cacheFeatures"
          value="true"/>
<property name="muc6.xv.priorVariance"
          value="10000.0"/>
<property name="muc6.xv.priorBlockSize"
          value="100"/>
<property name="muc6.xv.initialLearningRate"
          value="0.01"/>
<property name="muc6.xv.learningRateDecay"
          value="0.9"/>
<property name="muc6.xv.minImprovement"
          value="0.00001"/>
<property name="muc6.xv.maxEpochs"
          value="3"/>
<property name="muc6.xv.numFolds"
          value="10"/>

<target name="muc6-xv"
        depends="jar">
  <java classname="Muc6Xval"
        fork="true">
    <classpath refid="classpath.standard"/>
    <arg value="${muc6.data.munged}"/>
    <arg value="${muc6.xv.minFeatureCount}"/>
    <arg value="${muc6.xv.addIntercept}"/>
    <arg value="${muc6.xv.cacheFeatures}"/>
    <arg value="${muc6.xv.priorVariance}"/>
    <arg value="${muc6.xv.priorBlockSize}"/>
    <arg value="${muc6.xv.initialLearningRate}"/>
    <arg value="${muc6.xv.learningRateDecay}"/>
    <arg value="${muc6.xv.minImprovement}"/>
    <arg value="${muc6.xv.maxEpochs}"/>
    <arg value="${muc6.xv.numFolds}"/>
  </java>
</target>

<target name="muc6-hmm-xv"
        depends="jar">
  <java classname="Muc6HmmXval"
        fork="true">
    <classpath refid="classpath.standard"/>
    <arg value="${muc6.data.munged}"/>
  </java>
</target>

<property name="muc6.xv.thread.jobs.file"
          value="data/muc6-thread-jobs.csv"/>
<property name="muc6.xv.thread.threads"
          value="4"/>

<target name="muc6-thread-xv"
        depends="jar">
  <java classname="ThreadedXval"
        maxmemory="2500M"
        fork="true">
    <classpath refid="classpath.standard"/>
    <arg value="${muc6.data.munged}"/>
    <arg value="${muc6.xv.thread.jobs.file}"/>
    <arg value="${muc6.xv.thread.threads}"/>
  </java>
</target>


