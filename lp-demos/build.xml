// tutorials/chineseTokens

<target name="models"
        depends="train-as05,train-pku05,train-cityu05,train-msr05">
  <copy todir="../../models">
    <fileset dir=".">
      <include name="*.spell"/>
    </fileset>
  </copy>
</target>


<target name="train-as05"
        depends="compile">
  <java classname="Train05"
        maxmemory="1G"
        fork="true">
    <jvmarg value="-server"/>
    <classpath refid="classpath.standard"/>
    <arg value="${data.sighan05}"/>
    <arg value="as"/>                <!-- corpus name -->
    <arg value="5"/>                 <!-- max n-gram -->
    <arg value="5.0"/>               <!-- LM interpolation -->
    <arg value="7000"/>              <!-- LM num chars -->
    <arg value="${model.dir}"/>      <!-- directory for model -->
  </java>
</target>

