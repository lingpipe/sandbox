<?xml version="1.0"?>

<project name="LingPipe Book"
         basedir="."
         default="book">

  <property name="title"
           value="lp-book"/>

  <property name="version"
            value="0.4"/>

  <property name="java.src"
            value="src/"/>

  <property name="java2tex.out"
            value="build/tex/out"/>

  <target name="clean"
          depends="clean-demos">
    <delete dir="build"/>
  </target>

  <target name="jar">
    <mkdir dir="build/classes"/>
    <javac optimize="on"
           debug="yes"
           debuglevel="source,lines,vars"
           destdir="build/classes">
      <src path="src/java/main"/>
    </javac>
    <jar destfile="${jar}">
      <fileset dir="build/classes"
               includes="**/*.class"/>
    </jar>
  </target>

  <property name="code.width"
            value="63"/>
  <target name="j2t">
    <mkdir dir="${java2tex.out}"/>
    <java classname="com.colloquial.java2tex.Java2Tex"
          classpath="lib/java2tex-a.jar"
          fork="true">
      <arg value="${java.src}"/>
      <arg value="${java2tex.out}"/>
      <arg value="${code.width}"/>
      <arg value="UTF-8"/>
      <arg value="UTF-8"/>
      <arg value="\.java$"/>
    </java>
  </target>

  <target name="book">
    <mkdir dir="build/tex-aux"/>
    <exec executable="pdflatex"
          dir="tex">
      <arg value="-aux-directory=../build/tex-aux"/>
      <arg value="-output-directory=../build"/>
      <arg value="-include-directory=styles"/>
      <arg value="${title}.tex"/>
    </exec>
    <exec executable="makeindex"
          dir="build/tex-aux">
      <arg value="-s"/>
      <arg value="../../tex/styles/lingpipe-book.ist"/>
      <arg value="${title}.idx"/>
    </exec>
  </target>

  <target name="lucene-tut">
    <mkdir dir="build/luc/tex-aux"/>
    <exec executable="pdflatex"
          dir="tex">
      <arg value="-aux-directory=../build/luc/tex-aux"/>
      <arg value="-output-directory=../build/luc"/>
      <arg value="-include-directory=styles"/>
      <arg value="lucene-3-tutorial.tex"/>
    </exec>
  </target>

  <target name="update-version">
     <replace dir="."
              summary="yes"
              token="lingpipe-4.0.1.jar"
              value="lingpipe-4.0.1.jar"
              includes ="**/build.xml">
     </replace>
  </target>

  <target name="clean-demos">
    <subant failonerror="false">
            <fileset dir="src" includes="**/build.xml" excludes="build.xml"/>
            <target name="clean"/>
    </subant>
  </target>

  <target name="jar-demos">
    <subant failonerror="false">
            <fileset dir="." includes="**/build.xml" excludes="build.xml"/>
            <target name="clean"/>
            <target name="jar"/>
    </subant>
  </target>

  <target name="run-demos">
    <subant failonerror="false">
            <fileset dir="." includes="**/build.xml" excludes="build.xml"/>
            <target name="clean"/>
            <target name="run"/>
    </subant>
  </target>

  <target name="site">
    <antcall target="clean"/>
    <antcall target="j2t"/>
    <antcall target="book"/>
    <antcall target="book"/>
    <antcall target="lucene-tut"/>
    <antcall target="lucene-tut"/>

    <tar destfile="build/lingpipe-book-code-${version}.tgz"
         compression="gzip">
      <tarfileset dir="."
                  prefix="lingpipe-book-code-${version}"
                  mode="775">
        <include name="lib/**/*"/>
        <exclude name="lib/java2tex*"/>
        <include name="src/**/*"/>
        <include name="licenses/**/*"/>
        <exclude name="**/*~"/>
        <exclude name="**/.svn/*"/>
      </tarfileset>
    </tar>

    <!-- Lucene Tutorial -->
    <tar destfile="build/lucene-3-tutorial-code.tgz"
         compression="gzip">
      <tarfileset dir="."
                  prefix="lucene-3-tutorial-code"
                  mode="775">
        <include name="lib/lucene*"/>
        <include name="lib/lingpipe-4.0.1.jar"/>
        <include name="src/applucene/**/*"/>
        <exclude name="**/*~"/>
        <exclude name="**/.svn/*"/>
      </tarfileset>
    </tar>
    <!-- End Lucene -->

    <copy file="build/lp-book.pdf" 
          tofile="build/lingpipe-book-${version}.pdf"/>

    <tar destfile="build/lingpipe-book-site-${version}.tgz"
         compression="gzip">
      <tarfileset dir="build"
                  prefix="lingpipe-book/"
                  mode="775">
	<include name="lingpipe-book-${version}.pdf"/>
      </tarfileset>
      <tarfileset dir="web"
                  prefix="lingpipe-book/"
                  mode="775">
	<include name="**/*"/>
      </tarfileset>
      <tarfileset dir="build"
                  prefix="lingpipe-book/"
                  mode="775">
	<include name="lingpipe-book-code-${version}.tgz"/>
      </tarfileset>

      <!-- Lucene Tutorial -->
      <tarfileset dir="build/luc"
                  prefix="lingpipe-book/"
                  mode="775">
	<include name="lucene-3-tutorial.pdf"/>
      </tarfileset>
      <tarfileset dir="build"
                  prefix="lingpipe-book/"
                  mode="775">
	<include name="lucene-3-tutorial-code.tgz"/>
      </tarfileset>
      <!-- End Lucene -->
      
    </tar>
  </target>

</project>