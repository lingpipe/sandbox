<?xml version="1.0" encoding="UTF-8"?>
<taeDescription xmlns="http://uima.watson.ibm.com/resourceSpecifier">
  <frameworkImplementation>com.ibm.uima.java</frameworkImplementation>
  <primitive>true</primitive>
  <annotatorImplementationName>com.aliasi.uima.SentenceAnnotator</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>Sentence Annotator</name>
    <description>Finds sentences as chunks in text</description>
    <version>1.0</version>
    <vendor>Alias-i</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>ModelClass</name>
        <description>Java class name for sentence model</description>
        <type>String</type>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>TokenizerFactoryClass</name>
        <description>Java class name for tokenizer class</description>
        <type>String</type>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>ModelClass</name>
        <value><string>com.aliasi.sentences.IndoEuropeanSentenceModel</string>
        </value>
      </nameValuePair>
	  <nameValuePair>
        <name>TokenizerFactoryClass</name>
        <value><string>com.aliasi.tokenizer.IndoEuropeanTokenizerFactory</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
		<imports>
			<import location="AliasiTypes.xml"/>
		</imports>
    </typeSystemDescription>
    <capabilities>
      <capability>
        <inputs/>
        <outputs>
          <type>com.aliasi.uima.Sentence</type>
        </outputs>
        <languagesSupported>
          <language>en</language>
        </languagesSupported>
      </capability>
    </capabilities>
  </analysisEngineMetaData>
</taeDescription>
