<?xml version="1.0" encoding="ASCII"?>
<project>

  <property name="version"
            value="4.0"/>

  <property name="jar"
            value="build/lp-book-suffixarray-${version}.jar"/>

  <path id="classpath">
    <pathelement location="${jar}"/>
    <pathelement location="../../lib/lingpipe-4.0.1.jar"/>
  </path>

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="jar">
    <mkdir dir="build/classes"/>
    <javac debug="yes"
           debuglevel="source,lines,vars"
           destdir="build/classes"
           includeantruntime="false">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="classpath"/>
      <src path="src/"/>
    </javac>
    <jar destfile="${jar}">
      <fileset dir="build/classes"
               includes="**/*.class"/>
    </jar>
  </target>

  <property name="text" value="abracadabra"/>
  <target name="char-demo"
          depends="jar">
    <java classname="com.lingpipe.book.suffixarray.CharSuffixArrayDemo"
          classpathref="classpath"
          fork="true">
      <arg value="${text}"/>
    </java>
  </target>


  <target name="token-demo"
          depends="jar">
    <java classname="com.lingpipe.book.suffixarray.TokenSuffixArrayDemo"
          classpathref="classpath"
          fork="true">
      <arg value="${text}"/>
    </java>
  </target>

  <property name="dir" value="../../data/20news/20news-bydate-test"/>
  <property name="len" value="40"/>
  <target name="doc-demo"
          depends="jar">
    <java classname="com.lingpipe.book.suffixarray.DocSuffixArrayDemo"
          classpathref="classpath"
          fork="true">
      <arg value="${dir}"/>
      <arg value="${len}"/>
    </java>
  </target>


  <target name="run"
          depends="char-demo,
                   token-demo,
                   doc-demo"/>


</project>